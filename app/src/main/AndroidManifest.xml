<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alertme.projet.alertme" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name="com.alertme.projet.alertme.VariableGlobalClass"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Home"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".YourAlert"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_your_alert"
            android:windowSoftInputMode="adjustPan|adjustResize" >
        </activity>
        <activity
            android:name=".SettingWelcomePage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_setting_welcome_page" >
        </activity>
        <activity
            android:name=".SettingEmailPhone"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_activity_setting_email_phone" >
        </activity>
        <activity
            android:name=".SeeTemplate"
            android:label="@string/title_activity_see_template" >
        </activity>

        <service android:enabled="true" android:name=".NotificationService" />
    </application>

</manifest>
