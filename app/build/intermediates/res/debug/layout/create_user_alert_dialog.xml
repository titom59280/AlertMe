<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/createUserTitle"
        android:id="@+id/title"
        android:textColor="#fefefe"
        android:background="#FF851B"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/warning"
        android:textAlignment="center"
        android:gravity="center"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingEnd="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content"

        android:layout_marginLeft="10dp"
        android:text="@string/unknowUserMessage"
        android:textColor="#666666"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"/>

</LinearLayout><!-- From: file:/C:/Users/Thomas/Documents/projetEfficom/projet%20fin%20annee%20eii/AlertMe/app/src/main/res/layout/create_user_alert_dialog.xml -->