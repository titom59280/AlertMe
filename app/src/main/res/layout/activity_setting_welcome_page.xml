<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alertme.projet.alertme.SettingWelcomePage">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_above="@+id/linearLayout3">
        <TextView
            android:text="@string/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcome"
            android:textSize="30sp"
            android:layout_marginTop="30dp" />

        <TextView
            android:text="@string/messageSettingPage1"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:textSize="20sp"
            android:layout_marginTop="57dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/vertical_divider"
        android:showDividers="middle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">

        <Button
        android:id="@+id/Parent_step_button_previous"
        android:layout_weight="0.5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:textColor="@color/white"
        android:padding="5dp"
        android:background="@color/button_grey"
            android:layout_gravity="bottom" />

        <Button
            android:id="@+id/Parent_step_button_next"
            android:layout_width="fill_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/next"
            android:textColor="@color/white"
            android:background="@color/button_grey"
            android:layout_gravity="bottom" />
    </LinearLayout>

</RelativeLayout>
