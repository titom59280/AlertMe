<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/create_new_user_title"
        android:id="@+id/titleConfirm"
        android:textColor="#fefefe"
        android:background="#18A1E7"
        android:drawableLeft="@drawable/warning"
        android:textAlignment="center"
        android:gravity="center"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingEnd="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentPart1"
        android:text="@string/createUserMessagePart1"
        android:textColor="#666666"
        android:textSize="18sp"/>
    <IconTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentPart2"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:text="@string/createUserMessagePart2"
        android:textColor="#666666"
        android:textSize="18sp"/>
    <IconTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentPart3"
        android:paddingLeft="10dp"
        android:text="@string/createUserMessagePart3"
        android:textColor="#666666"
        android:paddingBottom="10dp"
        android:textSize="18sp"/>
    </LinearLayout>